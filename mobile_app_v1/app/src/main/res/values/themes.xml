<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PredictionApp.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#B0C2BB</item> <!-- Slightly darker shade -->
        <item name="colorPrimaryVariant">#87978F</item> <!-- Slightly darker shade -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="SplashTheme" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@raw/splash</item>
        <!-- Set the background color -->
        <item name="postSplashScreenTheme">@color/teal_700</item> <!-- Set your app's main theme here -->
    </style>

</resources>

