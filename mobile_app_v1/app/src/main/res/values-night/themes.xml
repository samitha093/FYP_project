<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark application theme based on the light theme. -->
    <style name="Theme.PredictionApp.Dark" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">#87978F</item> <!-- Slightly darker shade -->
        <item name="colorPrimaryVariant">#87978F</item> <!-- Slightly darker shade -->
        <item name="colorOnPrimary">@color/black</item> <!-- Change to black for better readability -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item> <!-- Change to white for better readability -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your dark theme here. -->
    </style>
    <style name="SplashTheme" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@raw/splash</item>
        <!-- Set the background color -->
        <item name="postSplashScreenTheme">@color/teal_700</item> <!-- Set your app's main theme here -->
    </style>
</resources>



